{
  "name": "movieflow-cli",
  "version": "0.4.4",
  "description": "AI 驱动的短视频生成工具 - 基于 Spec-Kit 架构的 AI 视频创作助手",
  "keywords": [
    "video",
    "短视频",
    "AI",
    "digital-human",
    "数字人",
    "即梦",
    "抖音",
    "视频号"
  ],
  "author": "MovieFlow Team",
  "license": "MIT",
  "main": "dist/cli.js",
  "bin": {
    "movieflow": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "clean": "rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "jest --testMatch='**/test/e2e/**/*.test.ts' --forceExit",
    "test:e2e:coverage": "jest --testMatch='**/test/e2e/**/*.test.ts' --coverage --forceExit",
    "test:unit": "jest --testMatch='**/test/**/*.test.ts' --testPathIgnorePatterns='e2e'",
    "prepare": "npm run build",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "@commander-js/extra-typings": "^12.0.0",
    "@types/ws": "^8.18.1",
    "@volcengine/openapi": "^1.32.0",
    "axios": "^1.6.0",
    "chalk": "^5.3.0",
    "dotenv": "^16.6.1",
    "form-data": "^4.0.0",
    "fs-extra": "^11.2.0",
    "glob": "^10.3.10",
    "inquirer": "^9.2.12",
    "js-yaml": "^4.1.0",
    "ora": "^8.0.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wordflowlab/movieflow"
  },
  "homepage": "https://github.com/wordflowlab/movieflow#readme",
  "bugs": {
    "url": "https://github.com/wordflowlab/movieflow/issues"
  }
}
