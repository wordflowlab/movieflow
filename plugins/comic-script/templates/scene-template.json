{
  "sceneTemplate": {
    "version": "1.0",
    "description": "场景设计模板 - 用于标准化场景结构",
    "schema": {
      "sceneId": "number",
      "sceneName": "string",
      "duration": "number (seconds)",
      "type": "action | dialogue | atmosphere | flashback",
      "location": {
        "place": "string",
        "time": "day | night | dusk | dawn",
        "weather": "sunny | cloudy | rainy | snowy | etc",
        "atmosphere": "string"
      },
      "characters": [
        {
          "name": "string",
          "role": "主角 | 配角 | 群演",
          "emotion": "string",
          "action": "string"
        }
      ],
      "plot": {
        "summary": "string",
        "conflict": "string",
        "resolution": "string"
      },
      "visual": {
        "style": "realistic | cartoon | anime | watercolor",
        "colorTone": "warm | cool | neutral",
        "lighting": "natural | dramatic | soft",
        "visualPotential": "high | medium | low"
      },
      "shots": {
        "suggestedCount": "number",
        "distribution": {
          "longShot": "number",
          "mediumShot": "number",
          "closeUp": "number"
        }
      }
    },
